@page
@model RegisterModel
@{
	Layout = "_LayoutLogin";
}
@{
	ViewData["Title"] = "Register";
}


<style>
	body{
		background-image: url('/uploads/images/LoginBackground.jpg');
		background-position: center;
		background-size: cover;
		height: 100vh;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.card {
		opacity: 90%;
		background-color: black;
		width: 400px;
		border-radius: 10px;
		padding: 20px;
		padding-bottom: 25px;
	}


		.card .btn {
			width: 100%;
			background-color: yellow;
			color: white;
			font-size: 21px;
			text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
		}

			.card .btn:hover {
				transition: opacity 0.3s ease;
				opacity: 0.8;
			}
</style>


<body>
	<div class="card">
		<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

			<h3 class="text-center mb-4" style="color:white">@ViewData["Title"]</h3>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-floating mb-2">
				<input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" />
				<label asp-for="Input.Username"></label>
				<span asp-validation-for="Input.Username" class="text-danger"></span>
			</div>
			<div class="form-floating mb-2">
				<input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
				<label asp-for="Input.Email"></label>
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<div class="form-floating mb-2">
				<input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
				<label asp-for="Input.Password"></label>
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<div class="form-floating mb-2">
				<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
				<label asp-for="Input.ConfirmPassword"></label>
				<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			<button id="registerSubmit" type="submit" class="mb-3 w-100 btn btn-lg">Register</button>


			<span style="color:white">Already have an account? : </span>
			<a style="color:yellow" asp-page="/Account/Login">Login</a>
		</form>
	</div>
</body>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
